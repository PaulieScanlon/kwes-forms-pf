---
import Layout from '../layouts/layout.astro';
---

<Layout>
  <main class='prose px-4 py-32 pb-16 mx-auto max-w-3xl'>
    <h1 class='mb-0 text-center'>Submitted</h1>
    <p class='mt-0 mb-8 text-center'>Thank you. Your data has been submitted.</p>
    <div class='flex justify-center'>
      <a
        href='/results'
        class='not-prose inline-flex border-2 border-brand-salmon text-brand-salmon font-bold rounded-full px-6 py-3 text-center'
        >See Results</a
      >
    </div>
  </main>
</Layout>
